{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 19
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/cmake-${presetName}",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "i686-base",
			"hidden": true,
			"inherits": "base",
			"architecture": {
				"value": "x86",
				"strategy": "external"
			},
			"toolset": {
				"value": "host=x86",
				"strategy": "external"
			}
		},
		{
			"name": "windows-i686-debug",
			"inherits": "i686-base"
		},
		{
			"name": "windows-i686-release",
			"inherits": "i686-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "windows-x86_64-debug",
			"inherits": "base"
		},
		{
			"name": "windows-x86_64-release",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "linux-x86_64-debug",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/bootstrap/ninja"
			}
		},
		{
			"name": "linux-x86_64-release",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/bootstrap/ninja",
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "macos-x86_64-debug",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/bootstrap/ninja"
			}
		},
		{
			"name": "macos-x86_64-release",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/bootstrap/ninja",
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "emscripten-i686-debug",
			"inherits": "i686-base",
			"toolchainFile": "build/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/bootstrap/ninja"
			}
		},
		{
			"name": "emscripten-i686-release",
			"inherits": "i686-base",
			"toolchainFile": "build/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/bootstrap/ninja",
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		}
	]
}
